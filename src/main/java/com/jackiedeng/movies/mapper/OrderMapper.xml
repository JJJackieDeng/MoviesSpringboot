<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jackiedeng.movies.mapper.OrderMapper">
    <resultMap type="com.jackiedeng.movies.pojo.Order" id="OrdersMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
        <result property="modifiedTime" column="modifiedTime" jdbcType="TIMESTAMP"/>
        <result property="orderUser" column="orderUser" jdbcType="VARCHAR"/>
        <result property="orderId" column="orderId" jdbcType="VARCHAR"/>
        <result property="runTime" column="runTime" jdbcType="OTHER"/>
        <result property="endTime" column="endTime" jdbcType="OTHER"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="OrdersMap">
        select
          ID, status, createTime, modifiedTime, orderUser, orderId, runTime, endTime, address
        from movies.orders
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="OrdersMap">
        select
          ID, status, createTime, modifiedTime, orderUser, orderId, runTime, endTime, address
        from movies.orders
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="OrdersMap">
        select
        ID, status, createTime, modifiedTime, orderUser, orderId, runTime, endTime, address
        from movies.orders
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="createtime != null">
                and createTime = #{createtime}
            </if>
            <if test="modifiedtime != null">
                and modifiedTime = #{modifiedtime}
            </if>
            <if test="orderuser != null and orderuser != ''">
                and orderUser = #{orderuser}
            </if>
            <if test="orderid != null and orderid != ''">
                and orderId = #{orderid}
            </if>
            <if test="runtime != null">
                and runTime = #{runtime}
            </if>
            <if test="endtime != null">
                and endTime = #{endtime}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into movies.orders(status, createTime, modifiedTime, orderUser, orderId, runTime, endTime, address)
        values (#{status}, #{createtime}, #{modifiedtime}, #{orderuser}, #{orderid}, #{runtime}, #{endtime}, #{address})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update movies.orders
        <set>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="createtime != null">
                createTime = #{createtime},
            </if>
            <if test="modifiedtime != null">
                modifiedTime = #{modifiedtime},
            </if>
            <if test="orderuser != null and orderuser != ''">
                orderUser = #{orderuser},
            </if>
            <if test="orderid != null and orderid != ''">
                orderId = #{orderid},
            </if>
            <if test="runtime != null">
                runTime = #{runtime},
            </if>
            <if test="endtime != null">
                endTime = #{endtime},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from movies.orders where ID = #{id}
    </delete>
</mapper>